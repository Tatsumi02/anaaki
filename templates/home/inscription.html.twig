{% extends 'base.html.twig' %}

{% block title %}Initialisation de votre compte{% endblock %}

{% block body %}

<div class="container">
    
    
       <div id="root">
        
       </div>

       <div id="ajax_load"  style="display: none;" >
          <center>
              <img src="{{asset('img/ajax.gif')}}" alt="">
              <br><br>
              <div style="color:white">Enregistrement en cours...</div>
          </center>
       </div>


       <center>
      
        <div class="cv" style="text-align: left; display:none;">
            <div class="col-md-12 " style="background:black; opacity:0.9; margin-bottom:5%;">
              <div class="col-md-12 panel-heading">
                <h4>Initialisation de votre compte <span class="fa fa-user"></span></h4>
              </div>
              
              
                <center>
                    <div class="notif alert alert-danger" style=" display:none;">
                      
                    </div>
                </center>
              

              <div class="col-md-12 panel-body" style="padding-bottom:30px;">
                <div class="col-md-12">
                  <form class="cmxform" id="signupForm" method="get" action="">
                    <div class="col-md-6">
                      <div class="form-group form-animate-text" style="margin-top:40px !important;">
                        <input type="text" class="form-text" id="nom" name="nom" required>
                        <span class="bar"></span>
                        <label>Firstname</label>
                      </div>

                      <div class="form-group form-animate-text" style="margin-top:40px !important;">
                        <input type="text" class="form-text" id="prenom" name="prenom" required>
                        <span class="bar"></span>
                        <label>Lastname</label>
                      </div>

                      <div class="form-group form-animate-text" style="margin-top:40px !important;">
                        <input type="text" class="form-text" id="username" name="username" required>
                        <span class="bar"></span>
                        <label>Username</label>
                      </div>
                    </div>

                    <div class="col-md-6">
                      <div class="form-group form-animate-text" style="margin-top:40px !important;">
                        <input type="password" class="form-text" id="password1" name="password1" required>
                        <span class="bar"></span>
                        <label>Password</label>
                      </div>

                      <div class="form-group form-animate-text" style="margin-top:40px !important;">
                        <input type="password" class="form-text" id="password2" name="password2" required>
                        <span class="bar"></span>
                        <label>Confirm Password</label>
                      </div>

                      <div class="form-group form-animate-text" style="margin-top:40px !important;">
                        <input type="text" class="form-text" id="email" name="email" required>
                        <span class="bar"></span>
                        <label>Email</label>
                      </div>
                    </div>                   
                    <div class="col-md-12">
                       <button type="submit" id="submit" class="submit btn btn-primary btn-lg">
                           Envoyer <span class="icon-rocket"></span>
                       </button>
                  </div>
                </form>

              </div>
            </div>
          </div>
          <br> <br> <br> <br><br> <br> <br> <br>
        </div>
        
       </center>

       {# metons le path du chemin de l'ajax ici #}

      <input type="text" name="" value="{{path('save_user')}}" id="path" style="display: none;">
      <input type="text" name="" value="{{path('progression')}}" id="pathp" style="display: none;">
      
    <style>
        body{
            background-image: url("{{asset('img/motivate-yourself.jpg')}}");
            background-attachment: fixed;
            background-size: cover;
        }
        #langes{
            background: white;
            color: white;
            padding: 2%;
            margin: 2%;
            
            word-wrap: break-word;
        }
        
    </style>
</div>
