{% extends 'baseAdmin.html.twig' %}

{% block title %}Creer un nouveau cours{% endblock %}

{% block body %}

    <div class="container">
        <center>
            <div id="canvast">
                <div class="col-md-12 " style="background:black; opacity:0.9; margin-bottom:5%;">
                    <div class="col-md-12 panel-heading">
                      <h4>Creer une nouvelle partie de jeu  <span class="fa fa-user"></span></h4>
                    </div>
                   
                    <div class="col-md-12 panel-body" style="padding-bottom:30px;">
                    <div class="col-md-12">
                        {% if isSend == true %}
                        <br>
                            <div class="alert alert-success">
                                La partie est creer avec success <span class="fa fa-check"></span>
                            </div>
                        {% endif %}
                <form action="{{path('save_partie')}}" method="post">

                    <div class="form-group form-animate-text" style="margin-top:40px !important;">
                        <input type="text" class="form-text" id="nom" name="titre" id="inputUsername" required>
                        <span class="bar"></span>
                        <label>Nom de la partie</label>
                      </div>

                      <div class="form-group form-animate-text" style="margin-top:40px !important;">
                        <textarea name="description" id="" class="form-text" cols="30" rows="10"></textarea>
                        <span class="bar"></span>
                        <label>Description de la partie</label>
                      </div>

    
                    
                    <div class="form-group form-animate-text" style="margin-top:40px !important;">
                        <select class="form-text" name="exoId1" id="inputUsername" required>
                            <option value="indefinir">----</option>
                           
                            {% for exo in exos %}
                           
                            
                                <option value="{{exo.id}}">{{exo.titre}}</option>
                        
                            {% endfor %}
                        
                        </select>
                        <span class="bar"></span>
                             
                        <label>niveau 1</label>

                        
                      </div>

                      <br>

                      <div class="form-group form-animate-text" style="margin-top:40px !important;">
                        <select class="form-text" name="exoId2" id="inputUsername" required>
