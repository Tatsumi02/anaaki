                        <select class="form-text" name="exoId5" id="inputUsername" required>
                            <option value="indefinir">----</option>
                           
                            {% for exo in exos %}
                           
                            
                                <option value="{{exo.id}}">{{exo.titre}}</option>
                        
                            {% endfor %}
                        
                        </select>
                        <span class="bar"></span>
                             
                        <label>niveau 5</label>

                        
                      </div>

                      <br>

                      <div class="form-group form-animate-text" style="margin-top:40px !important;">
                        <input type="number" class="form-text" id="duree" name="duree" id="inputUsername" required>
                        <span class="bar"></span>
                        <label>Duree de chaque niveau(en seconde)</label>
                      </div>
    
    
    
    

                      <br>
                      <button type="submit" class="btn btn-primary btn-lg">Enregistre <span class="fa fa-save"></span></button>
                </form>

                </div>
                </div>
                </div>
                
            </div>
        </center>
    </div>

{% endblock %}
