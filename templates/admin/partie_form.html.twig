                        </select>
                        <span class="bar"></span>
                             
                        <label>niveau 3</label>

                        
                      </div>

                      <br>

                      <div class="form-group form-animate-text" style="margin-top:40px !important;">
                        <select class="form-text" name="exoId4" id="inputUsername" required>
                            <option value="indefinir">----</option>
                           
                            {% for exo in exos %}
                           
                            
