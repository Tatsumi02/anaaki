{% extends 'baseAdmin.html.twig' %}

{% block title %}Creer un nouveau langage{% endblock %}

{% block body %}

    <div class="container">
        <center>
            <div id="canvast">
                <div class="col-md-12 " style="background:black; opacity:0.9; margin-bottom:5%;">
                    <div class="col-md-12 panel-heading">
                      <h4>Creer nouveau langage de programmation  <span class="fa fa-user"></span></h4>
                    </div>
                   
                    <div class="col-md-12 panel-body" style="padding-bottom:30px;">
                    <div class="col-md-12">
                        {% if isSend == true %}
                        <br>
                            <div class="alert alert-success">
                                Nouveau langage bien creer
                            </div>
                        {% endif %}
                <form action="{{path('save_langage')}}" method="post">
                    

                    <div class="form-group form-animate-text" style="margin-top:40px !important;">
                        <input type="text" class="form-text" id="nom" name="nom" id="inputUsername" required>
                        <span class="bar"></span>
                        <label>Langage</label>
                      </div>
    
                    <div class="form-group form-animate-text" style="margin-top:40px !important;">
                        <textarea name="description" id="" class="form-text" cols="30" rows="10"></textarea>
                        <span class="bar"></span>
                        <label>Description du langage</label>
                      </div>
                      <br>
                      <button type="submit" class="btn btn-primary btn-lg">Enregistre <span class="fa fa-save"></span></button>
                </form>

                </div>
                </div>
                </div>
                
            </div>
        </center>
    </div>

{% endblock %}
